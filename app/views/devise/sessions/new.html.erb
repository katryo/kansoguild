<div class="main">
<div class="container">
<div class="row">
<div class="span8 offset2">
<div class="paper center">
<h2>ログイン</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="block"><%= f.label :email, "Eメールアドレス" %>
  <%= f.email_field :email, :autofocus => true %></div>

  <div class="block"><%= f.label :password, "パスワード" %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div  class="block"><%= f.check_box :remember_me %> <%= f.label :remember_me, "記録しておく" %></div>
  <% end -%>

  <div  class="block"><%= f.submit "送信", class:"flat-button" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>